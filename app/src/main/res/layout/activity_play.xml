<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vanesharma.palindromegame.PlayActivity"
    android:background="@drawable/backdrop">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Enter your word!"
        android:ems="10"
        android:layout_marginTop="52dp"
        android:id="@+id/userWordEditText"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_below="@+id/promptTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Check to see if your word is a palindrome!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/promptTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <Button
        android:text="Check Now!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterButton"
        android:elevation="24dp"
        android:fontFamily="monospace"
        android:background="@android:color/black"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="@android:color/background_light"
        android:typeface="monospace"
        android:textStyle="normal|bold"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/userWordEditText"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
